# Advanced Agent Token Optimizer - Environment Variables Template
# Copy this file to .env and configure with your actual values

# Token Budget Configuration
AGENT_TOKEN_BUDGET=200000

# Error Handling
AGENT_MAX_ERRORS=5
AGENT_MAX_RETRY_ATTEMPTS=5

# Logging Configuration
AGENT_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Task Management
AGENT_TASK_TIMEOUT=300
# Timeout in seconds

# Output Configuration
AGENT_MAX_OUTPUT_SENTENCES=2
AGENT_STATUS_BAR_WIDTH=80

# Feature Flags
AGENT_ENABLE_MULTI_STRATEGY=true
AGENT_ENABLE_BACKTRACKING=true
AGENT_ENABLE_ADAPTIVE_OPTIMIZATION=true

# Wait Durations (in seconds)
AGENT_WAIT_SHORT=2
AGENT_WAIT_MEDIUM=5
AGENT_WAIT_LONG=10
